            }
            if($(window).scrollTop() > (3100 - $(window).height())){
                $('.back').css("bottom", $(window).scrollTop() -3100 + $(window).height() + "px");
            }else{
                $('.back').css("bottom","20px");
            }
        })
        $('.back').click(function(){
            $('body,html').animate({scrollTop:0},500);
        });

        $(window).resize(function(){
            if($(window).scrollTop() > (3100 - $(window).height())){
                $('.back').css("bottom", $(window).scrollTop() -3100 + $(window).height() + "px");
            }else{
                $('.back').css("bottom","20px");
            }
        })

        function levelA(){
            this.num = 0;
            this.showBool = false;
            this.numEnd = $(".levelTips div").length;
            this.div = $(".levelTips div");
            this.timer = null;
            this.animation = function(obj){
                var $this = obj;
                function showa() {
                    $this.div.eq($this.num).fadeIn();
                    $this.num++;
                    checkNum();
                }
                function hidea() {
                    $this.div.eq($this.num).fadeOut();
                    $this.num--;
                    checkNum();
                }
                function checkNum() {
                    if ($this.num < 1) {
                        $this.showBool = false;
                    } else if (this.num > this.numEnd) {
                        $this.showBool = true;
                    }
                }
                if (!$this.showBool) {
                    showa();
                } else {
                    hidea();
                }

            };
            this.init = function(){
                this.num = 0;
                var $this = this;
                this.timer = setInterval(function(){
                    function showa() {
                        $this.div.eq($this.num).fadeIn();
                        $this.num++;
                        if ($this.num > $this.numEnd+3) {
                            $this.showBool = true;
                        }

                    }
                    function hidea() {
                        $this.div.fadeOut();
                        $this.num = 0;
                        $this.showBool = false;
                    }
                    if (!$this.showBool) {
                        showa();
                    } else {
                        hidea();
                    }
                },1000)
            }
            this.clean = function(){
                clearInterval(this.timer);
                this.num = 0;
                this.div.hide();
            }
        }

        var level = new levelA();
        level.init();
        $(".levelActive div").hover(function(){
            level.clean();
            var $this = $(this);
            $(".levelTips div").each(function(){
                if($(this).index() == $this.index()) {
                    $(this).stop().fadeIn()
                }else{
                    $(this).stop().fadeOut();
                }
            });
        });
        $(".levelActive").mouseleave(function(){
            level.clean();
            level.init();
        })
    })
</script>
