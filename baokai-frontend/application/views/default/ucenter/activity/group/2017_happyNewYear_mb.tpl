<script type="text/javascript">
	var fitPage = function(){
		var w = document.body.clientWidth;
		w = w > 720 ? 720: w;
		w = w / 720;
		w = w * 100;
		document.getElementsByTagName('html')[0].style.fontSize = w + 'px';
	}
	fitPage();
	var t;
	var func = function(){
		clearTimeout(t);
		t = setTimeout(fitPage, 25);
	}
	window.onresize = function(){
		func();
	};
</script>

