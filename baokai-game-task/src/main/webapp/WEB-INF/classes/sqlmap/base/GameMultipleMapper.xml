<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="com.winterframework.firefrog.game.dao.vo.GameMultiple">
	<resultMap id="GameMultipleResult"
		type="com.winterframework.firefrog.game.dao.vo.GameMultiple">
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="gameMultipleColumns">
	    <![CDATA[
	        	ID as id,
	        	LOTTERYID as lotteryid,
	        	GAME_GROUP_CODE as gameGroupCode,
	        	GAME_SET_CODE as gameSetCode,
	        	BET_METHOD_CODE as betMethodCode,
	        	MAX_MULTIPLE as maxMultiple,
	        	CREATE_TIME as createTime,
	        	UPDATE_TIME as updateTime
	    ]]>
	</sql>
	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert"
		parameterType="com.winterframework.firefrog.game.dao.vo.GameMultiple"
		useGeneratedKeys="false" keyProperty="id" flushCache="true">
		<selectKey resultType="long" order="BEFORE" keyProperty="id">
			     SELECT SEQ_GAME_MULTIPLE.Nextval from dual
   	    </selectKey>
	    <![CDATA[
	        INSERT INTO
	        GAME_MULTIPLE (
	        	ID ,
	        	LOTTERYID ,
	        	GAME_GROUP_CODE ,
	        	GAME_SET_CODE ,
	        	BET_METHOD_CODE ,
	        	MAX_MULTIPLE ,
	        	CREATE_TIME ,
	        	UPDATE_TIME 
	        ) VALUES (
	        	#{id,javaType=long,jdbcType=DECIMAL} ,
	        	#{lotteryid,javaType=long,jdbcType=DECIMAL} ,
	        	#{gameGroupCode,javaType=int,jdbcType=DECIMAL} ,
	        	#{gameSetCode,javaType=int,jdbcType=DECIMAL} ,
	        	#{betMethodCode,javaType=int,jdbcType=DECIMAL} ,
	        	#{maxMultiple,javaType=int,jdbcType=DECIMAL} ,
	        	#{createTime,javaType=date,jdbcType=TIMESTAMP} ,
	        	#{updateTime,javaType=date,jdbcType=TIMESTAMP} 
	        )
	    ]]>

	</insert>

	<update id="update"
		parameterType="com.winterframework.firefrog.game.dao.vo.GameMultiple">
	    <![CDATA[
	        UPDATE GAME_MULTIPLE SET
		        LOTTERYID = #{lotteryid,javaType=long,jdbcType=DECIMAL} ,
		        GAME_GROUP_CODE = #{gameGroupCode,javaType=int,jdbcType=DECIMAL} ,
		        GAME_SET_CODE = #{gameSetCode,javaType=int,jdbcType=DECIMAL} ,
		        BET_METHOD_CODE = #{betMethodCode,javaType=int,jdbcType=DECIMAL} ,
		        MAX_MULTIPLE = #{maxMultiple,javaType=int,jdbcType=DECIMAL} ,
		        CREATE_TIME = #{createTime,javaType=date,jdbcType=TIMESTAMP} ,
		        UPDATE_TIME = #{updateTime,javaType=date,jdbcType=TIMESTAMP} 
	        WHERE 
		        ID = #{id} 
	    ]]>
	</update>
	
	
	<update id="updateForPublish"
		parameterType="com.winterframework.firefrog.game.dao.vo.GameMultiple">
	    <![CDATA[
	        UPDATE GAME_MULTIPLE SET
		        MAX_MULTIPLE = #{maxMultiple,javaType=int,jdbcType=DECIMAL} ,
		        UPDATE_TIME = #{updateTime,javaType=date,jdbcType=TIMESTAMP} 
	        WHERE 
		        LOTTERYID = #{lotteryid} and
		        GAME_GROUP_CODE = #{gameGroupCode} and
		        GAME_SET_CODE = #{gameSetCode} and
		        BET_METHOD_CODE = #{betMethodCode} 
	    ]]>
	</update>
	
	<delete id="delete" parameterType="java.lang.Long">
	    <![CDATA[
	        delete from GAME_MULTIPLE where
		        ID = #{id} 
	    ]]>
	</delete>
	<select id="getById" parameterType="long" resultMap="GameMultipleResult"
		flushCache="false">
		select
		<include refid="gameMultipleColumns" />
		    <![CDATA[
			    from GAME_MULTIPLE 
		        where 
		        ID = #{id} 
		    ]]>
	</select>

	<select id="getByLotteryId" parameterType="long"
		resultMap="GameMultipleResult" flushCache="false">
		select
		<include refid="gameMultipleColumns" />
		    <![CDATA[
			    from GAME_MULTIPLE t
		        where 
		        t.lotteryid = #{lotteryid} 
		        order by t.game_group_code,t.game_set_code,t.bet_method_code
		    ]]>
	</select>

	<select id="getByIds" parameterType="list" resultMap="GameMultipleResult"
		flushCache="false">
		select
		<include refid="gameMultipleColumns" />
		from GAME_MULTIPLE
		where id in
		<foreach item="item" index="index" collection="list" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</select>

	<sql id="gameMultipleDynamicWhere">
		<!-- ognl访问静态方法的表达式 为class org.apache.maven.project.MavenProjectmethod(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>
			<if test="@Ognl@isNotEmpty(id)">
				and ID = #{id}
			</if>
			<if test="@Ognl@isNotEmpty(lotteryid)">
				and LOTTERYID = #{lotteryid}
			</if>
			<if test="@Ognl@isNotEmpty(gameGroupCode)">
				and GAME_GROUP_CODE = #{gameGroupCode}
			</if>
			<if test="@Ognl@isNotEmpty(gameSetCode)">
				and GAME_SET_CODE = #{gameSetCode}
			</if>
			<if test="@Ognl@isNotEmpty(betMethodCode)">
				and BET_METHOD_CODE = #{betMethodCode}
			</if>
			<if test="@Ognl@isNotEmpty(maxMultiple)">
				and MAX_MULTIPLE = #{maxMultiple}
			</if>
			<if test="@Ognl@isNotEmpty(createTime)">
				and CREATE_TIME = #{createTime}
			</if>
			<if test="@Ognl@isNotEmpty(updateTime)">
				and UPDATE_TIME = #{updateTime}
			</if>
		</where>
	</sql>

	<select id="getAll" resultMap="GameMultipleResult" flushCache="false">
		select
		<include refid="gameMultipleColumns" />
		from GAME_MULTIPLE

		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
	</select>
	<select id="getCount" resultType="long">
		select count(*) from GAME_MULTIPLE
	</select>
	<select id="getCountByPage" resultType="long">
		select count(*) from GAME_MULTIPLE
		<include refid="gameMultipleDynamicWhere" />
	</select>

	<select id="getGameMultilple" resultMap="GameMultipleResult">
		select
		<include refid="gameMultipleColumns" />
		from GAME_MULTIPLE
		<include refid="gameMultipleDynamicWhere" />
	</select>

	<!-- 分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页 因为分页查询将传 offset,pageSize,lastRows 
		三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现 -->
	<select id="getByPage" resultMap="GameMultipleResult">
		select
		<include refid="gameMultipleColumns" />
		from GAME_MULTIPLE
		<include refid="gameMultipleDynamicWhere" />
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
	</select>


</mapper>
